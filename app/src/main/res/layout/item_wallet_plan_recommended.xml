<?xml version="1.0" encoding="utf-8"?>

    <!--                card1-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:layout_margin="5dp"
    app:cardElevation="15dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:id="@+id/layoutPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <!--                        pay coins layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pay "
                app:fontFamily="@font/poppins_bold"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPlanFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_credits"
                android:text="80"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/poppins_bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWorthSessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Worth 8 Sessions"
            app:fontFamily="@font/poppins_medium"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"/>

        <!--                        button layout-->
        <LinearLayout
            android:id="@+id/llPlanSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"
            android:padding="3dp"
            android:background="@drawable/rectangular_10_filled_coloraccent"
            android:orientation="horizontal">
<!--            <androidx.appcompat.widget.AppCompatTextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text=" Get"-->
<!--                app:fontFamily="@font/poppins_bold"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="12sp"/>-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvExtraCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get 8"
                app:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginStart="-4dp"
                android:src="@drawable/ic_credits"
                android:layout_gravity="center_vertical"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Extra"
                app:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
